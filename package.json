{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Opinionated TypeScript boilerplate.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --outDir build",
    "clean": "rm -rf build",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet",
    "lint:fix": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "start": "ts-node src/index start",
    "test": "ava"
  },
  "author": "Logan Saether <x@logansether.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "ava": "^3.12.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@polkadot/api": "^1.34.1",
    "@polkadot/util": "^3.4.1",
    "@polkadot/util-crypto": "^3.4.1",
    "axios": "^0.20.0",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "winston": "^3.3.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
