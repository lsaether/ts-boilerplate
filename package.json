{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Opinionated TypeScript boilerplate.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --outDir build",
    "clean": "rm -rf build",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet",
    "lint:fix": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "start": "ts-node src/index start",
    "slice": "ts-node src/index slice",
    "test": "ava"
  },
  "author": "Logan Saether <x@logansether.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "ava": "^3.10.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@polkadot/api": "^1.25.1",
    "@polkadot/keyring": "^2.18.1",
    "@polkadot/util": "^2.18.1",
    "chalk": "^4.1.0",
    "commander": "^6.0.0",
    "winston": "^3.3.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
